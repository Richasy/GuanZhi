    xmlns:local="using:Project_GuanZhi.Styles">
    <SolidColorBrush x:Key="MainBackground" Color="White"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="#4E5B6C"/>
    <SolidColorBrush x:Key="PrimaryColorOver" Color="#303C4D"/>
    <SolidColorBrush x:Key="PrimaryInsideColor" Color="White"/>
    <SolidColorBrush x:Key="LineColor" Color="#E8E8E8"/>

    <SolidColorBrush x:Key="ImportantTextColor" Color="Black"/>
    <SolidColorBrush x:Key="SubTextColor" Color="#666666"/>
    <SolidColorBrush x:Key="TipTextColor" Color="#A4A7B3"/>

    <SolidColorBrush x:Key="ProgressBackground" Color="#EBEBEB"/>
    <SolidColorBrush x:Key="ProgressThumbColor" Color="#D4D4D4"/>
    <SolidColorBrush x:Key="ListViewHoverColor" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ListViewSelectColor" Color="#E6E6E6"/>

    <AcrylicBrush x:Key="FlyoutAcrylicBackground" BackgroundSource="Backdrop"  TintColor="#FFF" TintOpacity="0.5" FallbackColor="#FFF"/>
